{
  "name": "noteme",
  "icon": "assets/image.png",
  "displayName": "Dev Notes",
 "description": "Tracks TODOs, FIXMEs, and build errors, providing reminders in VS Code. Reminder: Future updates may include a sidebar panel, notifications, and task management for better tracking.",
    "version": "1.1.3",
    "publisher": "EpphremM",
    "license": "MIT" ,
    "repository": {
  "type": "git",
  "url": "https://github.com/EpphremM/noteme.git"
},

  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],

  "activationEvents": [
    "onCommand:noteme.openview",
    "onView:noteme.openview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": { 
      "activitybar": [
        {
          "id": "noteme-activitybar",
          "title": "Note Me",
          "icon": "assets/image.png"
        }
      ]
    },
  
    "views": {
      "noteme-activitybar": [
        {
          "type": "webview",
          "id": "noteme.openview",
          "name": "View",
          "contextualTitle": "View"
        }
      ]
    },
    "commands": [
      {
        "command": "noteme.openview",
        "title": "noteme view "
      },
      {
        "command": "noteme.menu.view",
        "category": "noteme reminder for tracking bugs and tasks",
        "title": " noteme reminder",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "noteme.menu.view",
          "group": "navigation",
          "when": "view == noteme.openview"
        }
      ]
    }
  },  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.61.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3",
    "@vscode/test-electron": "^1.6.2"
  }
}
